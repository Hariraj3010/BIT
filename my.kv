WindowManager:
    MainWindow:
    SettingsWindow:
    SosWindow:
    MedicalWindow:
    UserWindow:
    AdminWindow:
<MainWindow>:
    name:"main"
    canvas.before:
        Color:
            rgba:0.95,0.95,0.95,1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            id:n
            pos_hint:{"x": 0.75, "y":0.95}
            size_hint:0.05, 0.05
            color: 0.1,0.5,0.6,10
            text: "Date and time: "
        Button:
            pos_hint:{"x":0.9, "y": 0.9}
            size_hint:0.1,0.05
            text: "Settings"
            
            on_release:
                app.root.current="settings"
                root.manager.transition.direction = "left"
        Button:
            pos_hint:{"x":0.2, "y": 0.65}
            size_hint:0.2,0.1
            text: "Admin"
            on_release:
                app.root.current="admin"
                root.manager.transition.direction = "up"
        Button:
            pos_hint:{"x":0.6, "y": 0.65}
            size_hint:0.2,0.1
            text: "User"
            on_release:
                app.root.current="user"
                root.manager.transition.direction = "up"
        Button:
            pos_hint:{"x":0.2, "y": 0.40}
            size_hint:0.2,0.1
            text: "S.O.S"
            on_release:
                app.root.current="sos"
                root.manager.transition.direction = "up"
        Button:
            pos_hint:{"x":0.6, "y": 0.40}
            size_hint:0.2,0.1
            text: "Medical Emergency"
            on_release:
                app.root.current="medical"
                root.manager.transition.direction = "up"
